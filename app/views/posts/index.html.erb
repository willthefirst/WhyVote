<h1>How do people choose their candidate?</h1>

<table>
  <tr>
    <th>Candidate</th>
    <th>Reason</th>
    <th>Votes</th>
    <th>Vote!</th>
    <th>email</th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.candidate %></td>
    <td><%= post.reason %></td>
    <td><%= post.votes_for %></td>
    <td><%= debug post %></td>
    <td><%= debug post.user %></td>
    <td>
      <%= link_to('vote for this post!', vote_up_post_path(post.id), :method => :post, :remote => 'true') %>
    </td>
  </tr>
<% end %>
</table>

